<view class="container">
    <view class="content">
        <view class="content-item" bindtap="todetail">
            <image src="../../content/images/gift.jpg" mode="center"></image>
            <view class="content-item-text">奖品:{{name}}</view>
            <view class="content-item-text content-item-text-kaijiang">{{opentime}} 自动开奖</view>
        </view>
        <view class="wxhao">
            <view class="wxhao-title">微信公众号</view>
            <view class="wxhao-content">{{businessname}}</view>
            <button class="wxhao-copy" bindtap="copyBtn">点此一键复制</button>
        </view>
        <view class="choujiang">
            <view class="choujiang-button" bindtap="tochoujiang">参与抽奖</view>
            <view class="choujiang-list">已有19568人参与，查看全部></view>
            <view class="choujiang-images">
                <image class="choujiang-images-item" mode="aspectFit" src="https://pic.qqtn.com/up/2019-5/2019051308301721735.jpg"></image>
                <image class="choujiang-images-item" mode="aspectFit" src="https://pic.qqtn.com/up/2019-5/2019051308301729076.jpg"></image>
                <image class="choujiang-images-item" mode="aspectFit" src="https://pic.qqtn.com/up/2019-5/2019051308301761672.jpg"></image>
                <image class="choujiang-images-item" mode="aspectFit" src="https://pic.qqtn.com/up/2019-5/2019051308301797319.jpg"></image>
                <image class="choujiang-images-item" mode="aspectFit" src="https://pic.qqtn.com/up/2019-5/2019051308301750719.jpg"></image>
            </view>
            <view class="share">
                <i-icon type="share" class="share-icon" size="24" color="#939393" /> 分享给朋友
            </view>
        </view>

    </view>
</view>
<include src="/utils/tpls/tabbar/tabbar-tpl.wxml" />